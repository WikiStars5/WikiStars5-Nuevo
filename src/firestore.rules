
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Global Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    // --- /users/{userId} ---
    // User profile data.
    match /users/{userId} {
      // Only the owner can read, create, update, or delete their own profile.
      allow read, write: if isOwner(userId);
      // Nobody can list all users.
      allow list: if false;

      // --- /users/{userId}/streaks/{streakId} ---
      // Private streak data for each user.
      match /streaks/{streakId} {
        // Owner can read and write their own streaks.
        allow read, write: if isOwner(userId);
        allow list: if isOwner(userId);
      }
      
      // --- /users/{userId}/notifications/{notificationId} ---
      // User-specific notifications.
      match /notifications/{notificationId} {
        // Owner can read, update, and delete their own notifications.
        allow read, update, delete: if isOwner(userId);
        // Any signed-in user can create a notification (e.g., for a reply).
        allow create: if isSignedIn();
      }
    }

    // --- /status/{userId} ---
    // Real-time presence data for users.
    match /status/{userId} {
      // Only the owner can update their own online status.
      allow read, write: if isOwner(userId);
      allow list: if false;
    }

    // --- /usernames/{username} ---
    // Used to enforce unique usernames.
    match /usernames/{username} {
      allow get: if true; // Anyone can check if a username exists.
      allow list: if false;
      allow create: if isSignedIn(); // Any signed-in user can claim a username.
      allow delete: if get(/databases/$(database)/documents/usernames/$(username)).data.userId == request.auth.uid; // Owner can delete.
      allow update: if false;
    }

    // --- /figures/{figureId} ---
    // Public figure profiles.
    match /figures/{figureId} {
      // Anyone can read and list figures.
      allow get, list: if true;
      // Only admins can create or delete figures.
      allow create, delete: if isAdmin();
      // Admins can update anything. Signed-in users can ONLY update vote/rating counters.
      allow update: if isAdmin() || (isSignedIn() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['attitude', 'emotion', 'ratingCount', 'totalRating', 'ratingsBreakdown']));

      // --- /figures/{figureId}/comments/{commentId} ---
      // Comments for a specific figure.
      match /comments/{commentId} {
        allow get, list: if true; // Anyone can read comments.
        allow create: if isSignedIn(); // Any signed-in user can create a comment.
        // An update is allowed if you are the owner (editing text) OR if you are just changing likes/dislikes.
        allow update: if isSignedIn() && ((resource.data.userId == request.auth.uid) || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'dislikes'])));
        allow delete: if resource.data.userId == request.auth.uid || isAdmin(); // Owner or admin can delete.

        // --- /figures/{figureId}/comments/{commentId}/votes/{userId} ---
        // Prevents duplicate likes/dislikes on a comment.
        match /votes/{userId} {
          allow get, write: if isOwner(userId); // You can only manage your own vote.
          allow list: if false;
        }
      }

      // --- /figures/{figureId}/attitudeVotes/{userId} & emotionVotes/{userId} ---
      // Prevents duplicate attitude/emotion votes on a figure.
      match /attitudeVotes/{userId} {
        allow get, write: if isOwner(userId);
        allow list: if false;
      }
      match /emotionVotes/{userId} {
        allow get, write: if isOwner(userId);
        allow list: if false;
      }
      
      // --- /figures/{figureId}/streaks/{userId} ---
      // Public-facing streak data for leaderboards.
      match /streaks/{userId} {
        allow read, list: if true; // Anyone can read for the leaderboard.
        allow write: if request.auth.uid == userId; // Only owner can write to their public streak doc.
      }
    }

    // --- /goat_battles/{battleId} ---
    // GOAT battle data.
    match /goat_battles/{battleId} {
        allow get, list: if true; // Publicly readable.
        allow write: if false; // Managed by admin panel.
        
        // --- /goat_battles/{battleId}/votes/{userId} ---
        // Prevents duplicate votes in GOAT battle.
        match /votes/{userId} {
            allow get, write: if isOwner(userId);
            allow list: if false;
        }
    }
    
    // --- /roles_admin/{userId} ---
    // Admin role management.
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow write: if isAdmin();
      allow list: if false;
    }
  }
}
