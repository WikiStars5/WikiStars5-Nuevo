
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Global Helper Functions ---
    
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
    
    function isIncrement(field) {
      // Allow increment or decrement by 1
      return request.resource.data[field] == resource.data[field] + 1 ||
             request.resource.data[field] == resource.data[field] - 1;
    }

    // --- User-Specific Collections ---

    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isOwner(userId) || isAdmin();

      // Notifications are a subcollection of users
      match /notifications/{notificationId} {
        allow read, update, delete: if isOwner(userId);
        allow list: if isOwner(userId);
        // Any signed-in user can create a notification (for replies)
        allow create: if isSignedIn();
      }
    }
    
    // Explicit root-level rule for the private streaks subcollection
    // This is necessary for the collectionGroup query on the user's profile page.
    match /users/{userId}/streaks/{streakId} {
        allow get, list, write: if isOwner(userId);
    }

    match /status/{userId} {
      allow read, write: if isOwner(userId);
      allow list: if false; // Status should not be listable
    }

    match /usernames/{username} {
      allow get: if true; 
      allow list: if false;
      allow create: if isSignedIn(); 
      allow delete: if get(/databases/$(database)/documents/usernames/$(username)).data.userId == request.auth.uid;
      allow update: if false;
    }

    // --- Figure-Specific Collections ---

    match /figures/{figureId} {
      allow get, list: if true;
      // Allow create only if the document does not exist, for any signed-in user.
      allow create: if isSignedIn();
      allow delete: if isAdmin();
      
      // Allow users to edit figure info (wiki-style)
      // OR allow vote/rating counter updates.
      allow update: if isSignedIn();

      // Comments subcollection
      match /comments/{commentId} {
        allow get, list: if true;
        allow create: if isSignedIn();
        allow update: if isSignedIn() && (
          // Owner can edit their own text
          (resource.data.userId == request.auth.uid && request.resource.data.text != resource.data.text) ||
          // Anyone can increment/decrement likes/dislikes
          (isIncrement('likes') || isIncrement('dislikes'))
        );
        allow delete: if resource.data.userId == request.auth.uid || isAdmin();

        // Votes on comments
        match /votes/{userId} {
          allow get, write: if isOwner(userId);
          allow list: if false;
        }
      }

      // Public streak data for leaderboards
      match /streaks/{userId} {
        allow read, list: if true; 
        allow write: if isOwner(userId);
      }
    }

    // --- Root-Level Rules for Collection Group Queries ---

    // These must be at the root to allow collectionGroup queries on the profile page.
    match /figures/{figureId}/attitudeVotes/{userId} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId);
    }
    match /figures/{figureId}/emotionVotes/{userId} {
        allow read: if isSignedIn();
        allow write: if isOwner(userId);
    }

    // --- Other Root-Level Collections ---

    match /hashtags/{hashtagId} {
        allow get, list: if true;
        allow write: if isSignedIn();
    }

    match /related_figures/{relatedFigureId} {
      allow get, list: if true;
      allow create, delete: if isAdmin();
      allow update: if false;
    }

    match /goat_battles/{battleId} {
        allow get, list: if true; 
        allow create, delete: if isAdmin();
        allow update: if (isAdmin()) ||
                         (isSignedIn() && (isIncrement('messiVotes') || isIncrement('ronaldoVotes')));
        
        match /votes/{userId} {
            allow get, write: if isOwner(userId);
            allow list: if false;
        }
    }
    
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow write: if isAdmin();
      allow list: if false;
    }
  }
}
